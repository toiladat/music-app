extends ../../layouts/default.pug

block main
  .container.my-3
    .row
      .col-8.mx-auto
        h2 Đăng ký tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          div(class="form-group")
            label(for="name") Tên
            input(
              type="text"
              class="form-control"
              id="name"
              name="fullName"
              required
            )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng ký
          a(href='/user/login') <- Quay về
          